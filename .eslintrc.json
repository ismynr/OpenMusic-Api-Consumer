{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "no-console": "off",
        "camelcase": ["error", {"properties": "never", "ignoreDestructuring": true}],
        "semi": ["error", "always"],
        "no-cond-assign": ["error", "always"],
        "no-underscore-dangle": "off"
    }
}
